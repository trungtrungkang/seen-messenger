{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "system",
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "dist/",
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es5"
    },
    "exclude": [
        "jspm_packages",
        "node_modules",
        "assets",
        "dist",
        "public",
        "jspm.config.js"
    ]
}